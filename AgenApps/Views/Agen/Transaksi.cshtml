    // CANCELLED TRANSACTION BY TRANSACTION NUMBER
    function batal(trnNumber) {
        swal({
            title: "Anda Yakin Akan Membatalkan Transaksi ini?",
            text: "Data yang telah dibatalkan tidak bisa dikembalikan!",
            icon: 'warning',
            dangerMode: true,
            buttons: {
                cancel: 'Tidak!',
                delete: 'Ya'
            }
        }).then(function (willDelete) {
            if (willDelete) {
                $.post("/Paket/deleteTransaksi", { trnNumber: trnNumber },
                    function (data, status) {
                        if (status == 'success') {
                            swal("Transaksi Berhasil Dibatalkan!", "Click Button OK!", {
                                icon: "success",
                            }).then(function () {
                                location.reload();
                            });
                        }
                    }
                )
            }
        });
    }



